<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/list_grey_gradient" >

        <TextView
            android:id="@+id/testSeqNum"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/list_highlight_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/testSeqNum"
            android:background="@color/list_highlight_color" />

        <TextView
            android:id="@+id/testName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/testSeqNum"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="No Load - 127"
            android:textColor="@color/list_highlight_color"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/list_grey_gradient" >

        <TextView
            android:id="@+id/testSeqNum1"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/list_highlight_color" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/testSeqNum1"
            android:background="@color/list_highlight_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/progresscontainer"
            android:layout_toRightOf="@+id/view"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/progresscontainer"
                android:layout_toRightOf="@+id/view"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="TYPE"
                        android:textColor="@color/list_highlight_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SENSOR 0"
                        android:textColor="@color/list_highlight_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SENSOR 1"
                        android:textColor="@color/list_highlight_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SENSOR 2"
                        android:textColor="@color/list_highlight_color" />
                </LinearLayout>
            </LinearLayout>
            <View 
                android:background="@drawable/dotted"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progresscontainer"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/testResultInd"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:progress="100"
                android:progressDrawable="@drawable/greenprogress"
                android:secondaryProgress="0" />

            <TextView
                android:id="@+id/testResultIndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DONE" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/list_grey_gradient" >

        <TextView
            android:id="@+id/testSeqNum2"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/list_highlight_color" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/testSeqNum2"
            android:background="@color/list_highlight_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/progresscontainer2"
            android:layout_toRightOf="@+id/view2"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="AVG"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/avg0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/avg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/avg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progresscontainer2"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true" >

            <ProgressBar
                android:id="@+id/pass_or_fail_avg_indicator"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:progress="100"
                android:progressDrawable="@drawable/greenprogress"
                android:secondaryProgress="0" />

            <TextView
                android:id="@+id/pass_or_fail_avg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DONE" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/list_grey_gradient" >

        <TextView
            android:id="@+id/testSeqNum3"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/list_highlight_color" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/testSeqNum3"
            android:background="@color/list_highlight_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/progresscontainer3"
            android:layout_toRightOf="@+id/view3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="VAR"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/stability0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/stability1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/stability2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/list_highlight_color" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progresscontainer3"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true" >

            <ProgressBar
                android:id="@+id/pass_or_fail_stability_indicator"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:progress="100"
                android:progressDrawable="@drawable/greenprogress"
                android:secondaryProgress="0" />

            <TextView
                android:id="@+id/pass_or_fail_stability_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DONE" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>