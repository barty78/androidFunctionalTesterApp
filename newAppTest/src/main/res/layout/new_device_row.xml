<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/list_grey_gradient">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/progresscontainer"
        android:background="@color/list_highlight_color" />

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/device_row_margin"
        android:layout_marginRight="@dimen/device_row_margin"
        android:layout_marginTop="@dimen/device_row_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/list_highlight_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/barcode" />

            <TextView
                android:textColor="@color/list_highlight_color"
                android:id="@+id/barcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/barcode"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/list_highlight_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serial" />

            <TextView
                android:textColor="@color/list_highlight_color"
                android:id="@+id/serial_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/serial"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/list_highlight_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address" />

            <TextView
                android:textColor="@color/list_highlight_color"
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/progresscontainer"
        android:layout_width="70dp"
        android:layout_height="69dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ProgressBar
            android:id="@+id/testResultInd"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:progress="100"
            android:progressDrawable="@drawable/redprogress"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/passed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
             />
    </RelativeLayout>

</RelativeLayout>
